    ssh-keygen -t rsa -C "dsxyr0@163.com"
    ssh -T git@github.com
    
    git init
    git add xxx
    git commit -m "xxx"
    git config --global user.name "dsxyr"
    git config --global user.email "dsxyr0@163.com"
